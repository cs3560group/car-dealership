<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.dealership.controllers.UserManagementController">
    <Label style="-fx-font-size: 20px;" text="User Management" />
    
    <TableView fx:id="userTable" prefHeight="300" prefWidth="567.0">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="79.0" text="ID" />
            <TableColumn fx:id="nameColumn" prefWidth="171.0" text="Name" />
         <TableColumn fx:id="emailColumn" prefWidth="203.0" text="Email" />
         <TableColumn fx:id="roleColumn" prefWidth="113.0" text="Role" />
        </columns>
    </TableView>
    
    <HBox spacing="10">
        <Button onAction="#handleAddUser" text="Add User" />
        <Button onAction="#handleEditUser" text="Edit User" />
        <Button onAction="#handleDeleteUser" text="Delete User" />
    </HBox>
</VBox>
