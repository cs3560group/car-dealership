<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.dealership.controllers.admin.AddVehicleController"
            prefWidth="400" prefHeight="450">

    <children>
        <VBox spacing="10" layoutX="30" layoutY="20">
            <Label text="Add New Vehicle" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <TextField fx:id="vinField" promptText="VIN" />
            <TextField fx:id="makeField" promptText="Make" />
            <TextField fx:id="modelField" promptText="Model" />
            <TextField fx:id="yearField" promptText="Year" />
            <TextField fx:id="priceField" promptText="Price" />
            <TextField fx:id="statusField" promptText="Status" />
            <TextField fx:id="conditionField" promptText="Condition" />
            <TextField fx:id="inventoryIdField" promptText="Inventory ID" />

            <HBox spacing="10">
                <Button text="Add Vehicle" onAction="#handleAddVehicle" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
