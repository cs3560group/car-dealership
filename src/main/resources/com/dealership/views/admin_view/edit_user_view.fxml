<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.dealership.controllers.admin.EditUserController"
      stylesheets="@../../styles/global.css" alignment="CENTER" prefWidth="300">

    <TextField fx:id="nameField" promptText="Name"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <ComboBox fx:id="roleComboBox" promptText="Role"/>

    <Button text="Save" onAction="#handleSave"/>
    <Button text="Delete" style="-fx-background-color: #f44336; -fx-text-fill: white;" onAction="#handleDelete"/>
</VBox>