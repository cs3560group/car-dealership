<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.dealership.controllers.admin.AddUserController"
            prefWidth="400" prefHeight="300"
            stylesheets="@../../styles/global.css">

    <children>
        <Label text="Add New User" layoutX="130" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <Label text="Name:" layoutX="40" layoutY="70" />
        <TextField fx:id="nameField" layoutX="120" layoutY="65" prefWidth="200" />

        <Label text="Email:" layoutX="40" layoutY="110" />
        <TextField fx:id="emailField" layoutX="120" layoutY="105" prefWidth="200" />

        <Label text="Password:" layoutX="40" layoutY="150" />
        <PasswordField fx:id="passwordField" layoutX="120" layoutY="145" prefWidth="200" />

        <Label text="Role:" layoutX="40" layoutY="190" />
        <ComboBox fx:id="roleComboBox" layoutX="120" layoutY="185" prefWidth="200" promptText="Select role"/>


        <Button  fx:id="submitButton" text="Submit" layoutX="160" layoutY="240" onAction="#handleSubmit" />
    </children>
</AnchorPane>