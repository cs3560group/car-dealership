<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox fx:controller="com.dealership.ui.controllers.InventoryController"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10"
      style="-fx-padding: 10;"
      prefWidth="600" 
      prefHeight="400">
    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Search by make or model" />
        <Button text="Search" onAction="#handleSearch" />
    </HBox>

    <GridPane fx:id="vehicleGrid" hgap="20" vgap="20" />
</VBox>